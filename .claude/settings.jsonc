{
	"permissions": {
		"allow": [
			// Directory navigation and inspection
			"Bash(ls:*)",
			"Bash(tree:*)",
			"Bash(find:*)",
			"Bash(mkdir:*)",

			// File inspection
			"Bash(cat:*)",
			"Bash(head:*)",
			"Bash(tail:*)",
			"Bash(grep:*)",
			"Bash(wc:*)",

			// Package management - pnpm
			"Bash(pnpm:--version)",
			"Bash(pnpm test:*)",
			"Bash(pnpm lint:*)",
			"Bash(pnpm lint:fix:*)",
			"Bash(pnpm typecheck:*)",
			"Bash(pnpm validate:*)",
			"Bash(pnpm run:*)",
			"Bash(pnpm exec:*)",

			// Package management - npm
			"Bash(npm:--version)",
			"Bash(npm test:*)",
			"Bash(npm run:*)",
			"Bash(npm exec:*)",
			"Bash(npx:*)",

			// Package management - yarn
			"Bash(yarn:--version)",
			"Bash(yarn test:*)",
			"Bash(yarn run:*)",
			"Bash(yarn exec:*)",
			"Bash(yarn dlx:*)",

			// Package management - bun
			"Bash(bun:--version)",
			"Bash(bun test:*)",
			"Bash(bun run:*)",
			"Bash(bunx:*)",

			// Package management - deno
			"Bash(deno:--version)",
			"Bash(deno test:*)",
			"Bash(deno task:*)",
			"Bash(deno run:*)",
			"Bash(deno cache:*)",
			"Bash(deno check:*)",

			// Package installation (can modify package.json and lock files)
			"Bash(pnpm install:*)",
			"Bash(pnpm add:*)",
			"Bash(pnpm remove:*)",
			"Bash(pnpm update:*)",
			"Bash(npm install:*)",
			"Bash(npm add:*)",
			"Bash(npm remove:*)",
			"Bash(npm update:*)",
			"Bash(yarn install:*)",
			"Bash(yarn add:*)",
			"Bash(yarn remove:*)",
			"Bash(yarn upgrade:*)",
			"Bash(bun install:*)",
			"Bash(bun add:*)",
			"Bash(bun remove:*)",
			"Bash(bun update:*)",
			"Bash(deno install:*)",
			"Bash(deno add:*)",
			"Bash(deno remove:*)",

			// Node/runtime version checks
			"Bash(node:--version)",

			// Git read-only operations
			"Bash(git status:*)",
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git show:*)",
			"Bash(git ls-tree:*)",
			"Bash(git ls-files:*)",
			"Bash(git branch:--show-current)",
			"Bash(git branch:--list)",
			"Bash(git remote:--verbose)",

			// GitHub CLI read operations
			"Bash(gh:api)",
			"Bash(gh:pr view)",
			"Bash(gh:pr list)",
			"Bash(gh:pr diff)",
			"Bash(gh:pr checks)",
			"Bash(gh:issue view)",
			"Bash(gh:issue list)",
			"Bash(gh:repo view)",

			// Docker read-only
			"Bash(docker ps:*)",
			"Bash(docker logs:*)",
			"Bash(docker inspect:*)",
			"Bash(docker-compose ps:*)",
			"Bash(docker-compose logs:*)",

			// Utilities
			"Bash(jq:*)",
			"Bash(shellcheck:*)",
			"Bash(which:*)",
			"Bash(echo:*)",
			"Bash(printf:*)",

			// Web documentation
			"WebFetch(domain:code.claude.com)",
			"WebFetch(domain:docs.anthropic.com)",
			"WebFetch(domain:github.com)",
			"WebFetch(domain:npmjs.com)",
			"WebFetch(domain:registry.npmjs.org)",
			"WebFetch(domain:yarnpkg.com)",
			"WebFetch(domain:classic.yarnpkg.com)",
			"WebFetch(domain:bun.sh)",
			"WebFetch(domain:deno.land)",
			"WebFetch(domain:deno.com)",
			"WebFetch(domain:jsr.io)",
			"WebFetch(domain:developer.mozilla.org)",
			"WebFetch(domain:turborepo.com)",
			"WebFetch(domain:vitest.dev)",
			"WebFetch(domain:biomejs.dev)",
			"WebFetch(domain:docs.aws.amazon.com)",

			// File operations - project directory (read always allowed)
			"Read(./*)",
			"Read(./.env)",
			"Read(./.env.*)",

			// Temporary directory access
			"Write(//tmp/**)",
			"Read(//tmp/**)"
		],
		"ask": [
			// Potentially destructive operations
			"Bash(rm:*)",
			"Bash(mv:*)",
			"Bash(cp -r:*)", // Recursive copy could be large

			// chmod operations (even restricted ones)
			"Bash(chmod:*)",

			// Git operations that modify working directory
			"Bash(git checkout:*)",
			"Bash(git switch:*)",
			"Bash(git restore:*)",
			"Bash(git clean:*)",
			"Bash(git stash:*)",

			// GitHub CLI write operations
			"Bash(gh:pr create)",
			"Bash(gh:pr close)",
			"Bash(gh:pr merge)",
			"Bash(gh:pr comment)",
			"Bash(gh:issue create)",
			"Bash(gh:issue close)",
			"Bash(gh:issue comment)",

			// Docker operations that could cost resources
			"Bash(docker pull:*)",
			"Bash(docker build:*)",

			// System modification
			"Bash(npm config:*)",
			"Bash(pnpm config:*)",
			"Bash(yarn config:*)"
		],
		"deny": [
			// Destructive system operations
			"Bash(rm -rf /*)",
			"Bash(rm -rf ~/*)",
			"Bash(rm -rf ./node_modules)",
			"Bash(rm -rf ./.pnpm-store)",
			"Bash(rm -rf ./.yarn)",
			"Bash(sudo:*)",

			// Git operations that modify history
			"Bash(git push:*)",
			"Bash(git commit:*)",
			"Bash(git reset --hard:*)",
			"Bash(git rebase:*)",
			"Bash(git merge:*)",
			"Bash(git remote add:*)",
			"Bash(git remote remove:*)",
			"Bash(git remote set-url:*)",

			// Docker operations that execute/modify
			"Bash(docker run:*)",
			"Bash(docker exec:*)",
			"Bash(docker start:*)",
			"Bash(docker stop:*)",
			"Bash(docker rm:*)",
			"Bash(docker-compose up:*)",
			"Bash(docker-compose down:*)",

			// Publishing operations
			"Bash(npm publish:*)",
			"Bash(pnpm publish:*)",
			"Bash(yarn publish:*)",
			"Bash(yarn npm publish:*)",
			"Bash(bun publish:*)",
			"Bash(deno publish:*)",
			"Bash(git tag:*)",

			// Dangerous file operations
			"Bash(sed -i:*)",
			"Bash(chmod 777:*)",
			"Bash(chmod -R 777:*)",

			// Global installations
			"Bash(npm install -g:*)",
			"Bash(npm i -g:*)",
			"Bash(yarn global add:*)",
			"Bash(pnpm add -g:*)",
			"Bash(pnpm add --global:*)",
			"Bash(bun add -g:*)",
			"Bash(bun add --global:*)",
			"Bash(deno install -g:*)",
			"Bash(deno install --global:*)"
		],
		"defaultMode": "acceptEdits"
	},
	"model": "sonnet",
	"enableAllProjectMcpServers": true,
	"enabledPlugins": {
		"workflow@savvy-web-claude-tools": true
	}
}
