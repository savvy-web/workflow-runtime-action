{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"identifierOrder": "lexicographic"
					}
				}
			}
		},
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"json": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"expand": "auto"
		},
		"linter": {
			"enabled": true
		}
	},
	"linter": {
		"domains": {
			"project": "all"
		},
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"options": {
						"ignoreRestSiblings": true
					}
				},
				"useImportExtensions": {
					"level": "error",
					"options": {
						"forceJsExtensions": true
					}
				}
			},
			"nursery": {
				"noImportCycles": "error",
				"useExplicitType": "error"
			},
			"recommended": true,
			"style": {
				"useConsistentTypeDefinitions": "error",
				"useImportType": {
					"level": "error",
					"options": {
						"style": "separatedType"
					}
				},
				"useNodejsImportProtocol": "error"
			},
			"suspicious": {
				"noBiomeFirstException": "error",
				"noDuplicateObjectKeys": "error",
				"noQuickfixBiome": "error",
				"useBiomeIgnoreFolder": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["package.json"],
			"json": {
				"formatter": {
					"expand": "auto"
				}
			}
		},
		{
			"includes": ["__test__/**/*.ts", "scripts/**/*.ts", "scripts/**/*.mts", "vitest.config.ts"],
			"linter": {
				"rules": {
					"nursery": {
						"useExplicitType": "off"
					}
				}
			}
		},
		{
			"includes": ["vitest.config.ts", "**/rslib.config.ts"],
			"linter": {
				"rules": {
					"nursery": {
						"useExplicitType": "off"
					}
				}
			}
		},
		{
			"assist": {
				"actions": {
					"source": {
						"useSortedKeys": "on"
					}
				}
			},
			"includes": ["**/turbo.json", "**/tsconfig.json", "**/tsconfig.*.json"]
		}
	],
	"root": true,
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.turbo",
			"!**/.git",
			"!**/.rslib",
			"!**/.vitest",
			"!**/.coverage",
			"!.claude/settings.local.json",
			"!**/*.api.json",
			"!lib/turbo/schema.json",
			"!coverage"
		]
	}
}
