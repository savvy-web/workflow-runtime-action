{
	"name": "@savvy-web/workflow-runtime-action",
	"version": "0.1.0",
	"private": false,
	"description": "Comprehensive Node.js runtime setup action with automatic package manager detection, dependency caching, and Turbo build cache configuration",
	"repository": {
		"type": "git",
		"url": "https://github.com/savvy-web/workflow-runtime-action.git"
	},
	"type": "module",
	"scripts": {
		"build": "tsx lib/scripts/build.ts",
		"ci:publish": "changeset publish",
		"ci:test": "vitest --run --reporter=verbose",
		"ci:version": "changeset version && biome format --write .",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"lint:md:fix:file": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"prepare": "husky",
		"test": "vitest --run --reporter=verbose",
		"typecheck": "turbo run typecheck:all --log-prefix=none",
		"typecheck:all": "tsgo --noEmit"
	},
	"dependencies": {
		"@actions/cache": "^4.1.0",
		"@actions/core": "^1.10.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0",
		"@actions/glob": "^0.5.0",
		"@actions/http-client": "^3.0.0",
		"@actions/io": "^2.0.0",
		"@actions/tool-cache": "^2.0.2",
		"@anthropic-ai/sdk": "^0.70.1",
		"jsonc-parser": "^3.3.1",
		"semver": "^7.7.3",
		"workspace-tools": "0.38.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@octokit/core": "^7.0.6",
		"@octokit/types": "^16.0.0",
		"@rslib/core": "^0.18.0",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20251111.1",
		"@vercel/ncc": "^0.38.4",
		"@vitest/coverage-v8": "^4.0.13",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"markdownlint-cli2": "^0.19.1",
		"minimatch": "^10.1.1",
		"prettier": "^3.6.2",
		"sort-package-json": "3.4.0",
		"tsx": "^4.20.6",
		"turbo": "^2.6.1",
		"type-fest": "^5.2.0",
		"vitest": "^4.0.13",
		"yaml": "^2.8.1",
		"yaml-lint": "^1.7.0"
	},
	"packageManager": "pnpm@10.20.0",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"version": "10.20.0",
			"onFail": "warn"
		},
		"runtime": [
			{
				"name": "node",
				"version": "24.11.0",
				"onFail": "warn"
			}
		]
	}
}
