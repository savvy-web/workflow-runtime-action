{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["*.ts", "lib/**/*.ts", "src/**/*.ts", "__tests__/**/*.ts", "types/**/*.d.ts"]
}
