{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"types": ["vitest/globals"]
	},
	"exclude": ["lib", "node_modules", "dist", "__fixtures__"],
	"include": ["**/*.ts", "**/*.test.ts", "types/**/*.d.ts", "**/*.cjs"]
}
